{
  "title": "JSON schema for JSONPatch files",
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "array",
  "minItems": 2,
  "items": {
    "$ref": "#/definitions/operation"
  },
  "contains" : {
    "description" : "http://json-schema.org/latest/json-schema-validation.html#rfc.section.6.4.6",
    "$ref": "#/definitions/version"
  },
  "definitions": {
    "path": {
      "properties": {
        "path": {
          "description": "A JSON Pointer path.",
          "type": "string"
        }
      }
    },
    "operation": {
      "type": "object",
      "required": [
        "op",
        "path"
      ],
      "allOf": [
        {
          "$ref": "#/definitions/path"
        }
      ],
      "oneOf": [
        {
          "required": [
            "value"
          ],
          "properties": {
            "op": {
              "description": "The operation to perform.",
              "type": "string",
              "enum": [
                "add",
                "replace",
                "test"
              ]
            },
            "value": {
              "description": "The value to add, replace or test."
            }
          }
        },
        {
          "properties": {
            "op": {
              "description": "The operation to perform.",
              "type": "string",
              "enum": [
                "remove"
              ]
            }
          }
        },
        {
          "required": [
            "from"
          ],
          "properties": {
            "op": {
              "description": "The operation to perform.",
              "type": "string",
              "enum": [
                "move",
                "copy"
              ]
            },
            "from": {
              "description": "A JSON Pointer path pointing to the location to move/copy from.",
              "type": "string"
            }
          }
        }
      ]
    },
    "version": {
      "type": "object",
      "required": [
        "op",
        "path",
        "value"
      ],
      "properties": {
        "op": {
          "description": "The test operation to perform.",
          "type": "string",
          "const": "test"
        },
        "path": {
          "description": "The path to version field",
          "type": "string",
          "const": "/version"
        },
        "value": {
          "description": "The value of version attribute to be tested.",
          "type": "integer"
        }
      }
    }
  }
}